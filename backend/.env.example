# SAGE RAG API Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production-please-use-a-strong-random-key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# gRPC Configuration
GRPC_HOST=0.0.0.0
GRPC_PORT=50051

# ChromaDB Configuration
CHROMADB_PATH=../chromaDB_creation/ncert_chromadb

# LLM Configuration
MODEL_PATH=../chromaDB_creation/models/phi2/phi-2.Q4_K_M.gguf

# RAG Configuration
MAX_RETRIEVAL_RESULTS=5
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=1500

# Logging
LOG_DIR=logs
LOG_FILE=rag_api.log

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8002