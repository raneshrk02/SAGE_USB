# Production Environment Configuration for USB Deployment
# This file is used when building for USB portable deployment

# Build configuration
VITE_APP_TITLE=SAGE Educational Assistant
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Portable Educational RAG System

# API Configuration - Will be dynamically detected at runtime
# These are fallback values if dynamic detection fails
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# Feature flags for USB deployment
VITE_USB_DEPLOYMENT=true
VITE_ENABLE_ADMIN_MODE=true
VITE_ENABLE_DEVELOPER_OPTIONS=false
VITE_ENABLE_ANALYTICS=false

# Performance settings
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PWA=false

# Debug settings (disabled in production)
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=false